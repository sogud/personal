---
import type { CollectionEntry } from 'astro:content';

interface Props {
  items: CollectionEntry<'photography'>[];
  featured?: boolean;
}

const { items, featured = false } = Astro.props;
---

<div class={`photography-grid ${featured ? 'featured-grid' : 'all-grid'}`}>
  {items.map((item) => {
    const { title, description, images, category, pubDate, location, camera, settings } = item.data;
    const mainImage = images[0];
    
    return (
      <article class="photography-item" data-category={category}>
        <a href={`/photography/${item.slug}/`} class="photography-link">
          <div class="image-container">
            <img
              src={mainImage.src}
              alt={mainImage.alt}
              width={mainImage.width}
              height={mainImage.height}
              loading="lazy"
              class="photography-image"
            />
            <div class="image-overlay">
              <div class="overlay-content">
                <h3 class="item-title">{title}</h3>
                <p class="item-description">{description}</p>
                <div class="item-meta">
                  {location && <span class="meta-item">üìç {location}</span>}
                  {camera && <span class="meta-item">üì∑ {camera}</span>}
                  {settings?.aperture && <span class="meta-item">f/{settings.aperture}</span>}
                </div>
              </div>
            </div>
          </div>
        </a>
        
        <div class="item-info">
          <h3 class="item-title">{title}</h3>
          <p class="item-description">{description}</p>
          <div class="item-meta">
            <time datetime={pubDate.toISOString()} class="publish-date">
              {pubDate.toLocaleDateString('zh-CN', {
                year: 'numeric',
                month: 'long',
                day: 'numeric'
              })}
            </time>
            {category && <span class="category-tag">{category}</span>}
          </div>
        </div>
      </article>
    );
  })}
</div>

<style>
  .photography-grid {
    display: grid;
    gap: 2rem;
    margin-top: 2rem;
  }

  .featured-grid {
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
  }

  .all-grid {
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  }

  .photography-item {
    background: white;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    transition: all 0.3s ease;
    position: relative;
  }

  .photography-item:hover {
    transform: translateY(-4px);
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
  }

  .photography-link {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .image-container {
    position: relative;
    overflow: hidden;
    aspect-ratio: 16/9;
  }

  .photography-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .photography-item:hover .photography-image {
    transform: scale(1.05);
  }

  .image-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0) 0%,
      rgba(0, 0, 0, 0.7) 100%
    );
    opacity: 0;
    transition: opacity 0.3s ease;
    display: flex;
    align-items: flex-end;
    padding: 1.5rem;
  }

  .photography-item:hover .image-overlay {
    opacity: 1;
  }

  .overlay-content {
    color: white;
    width: 100%;
  }

  .overlay-content .item-title {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    line-height: 1.3;
  }

  .overlay-content .item-description {
    font-size: 0.875rem;
    opacity: 0.9;
    margin-bottom: 0.75rem;
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .overlay-content .item-meta {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    font-size: 0.75rem;
    opacity: 0.8;
  }

  .overlay-content .meta-item {
    background: rgba(255, 255, 255, 0.2);
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    backdrop-filter: blur(4px);
  }

  .item-info {
    padding: 1.5rem;
  }

  .item-title {
    font-size: 1.125rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: #1f2937;
    line-height: 1.4;
  }

  .item-description {
    color: #6b7280;
    font-size: 0.875rem;
    line-height: 1.5;
    margin-bottom: 1rem;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .item-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .publish-date {
    color: #9ca3af;
    font-size: 0.875rem;
  }

  .category-tag {
    background: #f3f4f6;
    color: #374151;
    padding: 0.25rem 0.75rem;
    border-radius: 1rem;
    font-size: 0.75rem;
    font-weight: 500;
  }

  /* Ê∑±Ëâ≤Ê®°Âºè */
  @media (prefers-color-scheme: dark) {
    .photography-item {
      background: #1f2937;
    }

    .item-title {
      color: #f9fafb;
    }

    .item-description {
      color: #d1d5db;
    }

    .publish-date {
      color: #9ca3af;
    }

    .category-tag {
      background: #374151;
      color: #d1d5db;
    }
  }

  /* ÂìçÂ∫îÂºèËÆæËÆ° */
  @media (max-width: 768px) {
    .featured-grid,
    .all-grid {
      grid-template-columns: 1fr;
    }

    .photography-item {
      margin-bottom: 1rem;
    }

    .item-info {
      padding: 1rem;
    }
  }

  /* Âä†ËΩΩÂä®Áîª */
  .photography-item {
    animation: fadeInUp 0.6s ease-out;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
